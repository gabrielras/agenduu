
= flash_message
= form_with model: @organization,
            url: (@organization.new_record? ? user_provider_organizations_path : user_provider_organization_path),
            html: { class: 'require-validation' }, validate: true do |f|

  .card.mb-4
    .card-body
      .mb-3
        = f.label :title, class: 'col-sm-2 col-form-label'
        = f.text_field :title,
                    autofocus: true,
                    class: 'form-control'
      .mb-3
        = f.label :email, class: 'col-sm-2 col-form-label'
        = f.email_field :email, class: 'form-control'
      .mb-3
        = f.label :phone_number, class: 'col-sm-2 col-form-label'
        = f.text_field :phone_number, class: 'form-control'

    .row
      .d-grid.gap-2.col-3.mx-auto.mb-3
        = f.submit t('.confirm', default: t("helpers.submit.save")), class: 'btn btn-secondary rounded-pill'

