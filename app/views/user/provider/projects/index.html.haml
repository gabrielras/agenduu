= flash_message

.content-wrapper
  / Content
  .container-xxl.flex-grow-1.container-p-y
    %h4.fw-bold.py-3.mb-4
      Projetos
    .card.mb-4
      %hr.m-0/
      .card-body
        .row.gy-3
          .col-lg-4.col-md-6
            = link_to 'Cadastrar', new_user_provider_project_path, class: 'btn btn-dark', "data-controller": "turbo"

      .card-body
        %div.mb-4
          = search_form_for @q, url: user_provider_projects_path do |f|
            = f.search_field :title_or_creator_full_name_cont, class: 'form-control', placeholder: 'Pesquisar por título ou criador'
        .table-responsive.text-nowrap
          %table.table.table-dark
            %thead
              %tr
                %th Título
                %th Criador
                %th
            %tbody.table-border-bottom-0
              - @projects.each do |project|
                %tr
                  %td
                    %strong= project.title
                  %td
                    %strong= project.user.try(:full_name)
                  %td
                    = link_to t("helpers.show"), user_provider_manager_project_folders_path(project),
                                                  class: 'btn btn-danger btn-sm'
                  

                
              