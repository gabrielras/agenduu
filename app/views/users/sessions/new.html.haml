.authentication-wrapper.authentication-basic.container-p-y
  .authentication-inner.py-4
    .card
      .card-body              
        %h4.mb-2 Bem-vindo ao Agenduu ðŸ‘‹
        %p.mb-4 FaÃ§a login na sua conta
        #formAuthentication.mb-3
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .mb-3
              = f.label :email, class: 'form-label'
              = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', id: 'email', placeholder: 'Entrar com Email'
            .mb-3.form-password-toggle
              .d-flex.justify-content-between
                = f.label :password, class: 'form-label'
                = link_to new_user_password_path do
                  %small Esqueceu a senha?
              .input-group.input-group-merge
                = f.password_field :password, autocomplete: "current-password", class: 'form-control', id: 'password'
                %span.input-group-text.cursor-pointer
                  %i.bx.bx-hide
            - if devise_mapping.rememberable?
              .mb-3
                .form-check
                  = f.check_box :remember_me, class: 'form-check-input', id: 'remember-me'
                  = f.label :remember_me, class: 'form-check-label'
            .mb-3
              = f.submit "Log in", class: 'btn btn-primary d-grid w-100'
          %p.text-center
            %span Novo em nossa plataforma?
            = link_to new_user_registration_path do
              %span Crie a sua conta aqui?
